{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": ["SUPABASE_URL", "SUPABASE_ANON_KEY", "SUPABASE_BUCKET_NAME"],
  "tasks": {
    "format:write": {},
    "format:check": {},
    "build": {
      "dependsOn": ["format:check", "^build"],
      "outputs": ["build/**"]
    },
    "dev": { "cache": false, "persistent": true }
  }
}
